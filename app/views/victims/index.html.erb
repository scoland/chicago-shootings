<%= link_to image_tag("menu.png"), disclaimer_path, class: "menu-link" %>

<h1 class="hero">How many people have been shot & killed in Chicago?</h1>

<h2 class="hero-number"><%= @victims.count %></h2>

<% @victim_days.each do |day, victims| %>
	<div class="date-header">
		<h3><%= day.strftime("%B %d, %Y") %></h3>
		<%= render :partial => "twitter", :locals => { :victims => victims } %>
		<h4><%= victims.count %></h4>




	</div>
		<ul class="victims-list">
			<% for victim in victims %>
					<li>
						<% if victim.story_url.present? %>
							<%= link_to(victim.story_url, :target => "_blank") do %>
								<%= victim.name %> <span><%= victim.age %></span>
							<% end %>

						<% else %>
							<%= victim.name %> <span><%= victim.age %></span>
						<% end %>

					</li>
			<% end %>
		</ul>

	</table>
<% end %>